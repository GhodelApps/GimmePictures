<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GimmePictures" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/gray_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_200</item>
        <item name="colorSecondaryVariant">@color/pink_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialAlertDialogTheme">@style/MaterialAlertDialog</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="GimmePictures.SplashTheme" parent="Theme.GimmePictures">
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="GimmePictures.TranslucentStatusBar" parent="Theme.GimmePictures">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="GimmePictures.ToolbarOverlay" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:fontFamily">@font/dancing_script_bold</item>
    </style>

    <style name="GimmePictures.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />

</resources>