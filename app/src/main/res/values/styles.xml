<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GimmePictures.TabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="tabIndicatorColor">?attr/colorOnBackground</item>
        <item name="tabIndicatorHeight">@dimen/indent_2dp</item>
        <item name="tabPaddingStart">@dimen/indent_6dp</item>
        <item name="tabPaddingEnd">@dimen/indent_6dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/GimmePictures.AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">?attr/colorOnBackground</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">@dimen/indent_0dp</item>
        <item name="android:layoutDirection">ltr</item>
    </style>

    <style name="GimmePictures.AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="GimmePictures.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorOnPrimary</item>
        <item name="boxStrokeErrorColor">@color/red_500</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="GimmePictures.IndefiniteProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">?attr/colorOnPrimary</item>
    </style>

    <style name="GimmePictures.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CheckBox</item>
    </style>

    <style name="ThemeOverlay.App.CheckBox" parent="">
        <item name="colorOnSurface">?attr/colorOnPrimary</item>
        <!--<item name="colorSecondary">@color/shrine_pink_100</item>-->
    </style>

    <style name="GimmePictures.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="tint">?attr/colorPrimary</item>
        <item name="android:layout_margin">@dimen/indent_16dp</item>
    </style>

    <style name="GimmePictures.ExtendedFloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:layout_margin">@dimen/indent_16dp</item>
    </style>

    <style name="MaterialImageButton">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/indent_8dp</item>
    </style>

    <style name="GimmePictures.Widget.MaterialComponents.ButtonColored" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="rippleColor">?attr/colorOnPrimary</item>
    </style>

    <style name="GimmePictures.Widget.MaterialComponents.ButtonPrimaryColor" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="rippleColor">?attr/colorPrimary</item>
    </style>

    <style name="GimmePictures.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="GimmePictures.Widget.MaterialComponents.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <!--<item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>-->
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">@drawable/bottom_nav_view_icon_tint</item>
        <item name="android:colorActivatedHighlight">?attr/colorOnPrimary</item>
        <item name="rippleColor">?attr/colorOnPrimary</item>
        <item name="strokeColor">@drawable/bottom_nav_view_icon_tint</item>
    </style>

    <style name="LoginScreenOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:colorActivatedHighlight">@color/white</item>
        <item name="rippleColor">@color/black</item>
        <item name="strokeColor">@color/white</item>
    </style>

    <style name="LoginScreenColoredButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="rippleColor">@color/black</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.IconOnly" parent="GimmePictures.Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@drawable/bottom_nav_view_icon_tint</item>
    </style>

    <style name="GimmePictures.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">?attr/colorOnPrimary</item>
        <item name="boxStrokeWidth">@dimen/indent_1dp</item>
        <item name="boxStrokeWidthFocused">@dimen/indent_2dp</item>
    </style>

    <style name="GimmePictures.LoginScreen.ToolbarOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />

    <style name="GimmePictures.LoginScreen.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />

</resources>