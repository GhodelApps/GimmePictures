<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GimmePictures" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_200</item>
        <item name="colorSecondaryVariant">@color/pink_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="materialAlertDialogTheme">@style/MaterialAlertDialog</item>
        <!--<item name="preferenceTheme">@style/PrefsTheme</item>-->
    </style>

    <style name="GimmePictures.SplashTheme" parent="Theme.GimmePictures">
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="GimmePictures.ToolbarOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="GimmePictures.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

</resources>