<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_round_shape"
    app:behavior_fitToContents="true"
    app:behavior_hideable="true"
    app:behavior_peekHeight="@dimen/bottom_sheet_collapsed_size"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/bottom_sheet_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_sheet_collapsed_size"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/user_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@id/btn_like"
                android:gravity="center|start"
                android:orientation="horizontal"
                android:paddingStart="@dimen/indent_16dp"
                android:paddingTop="@dimen/indent_8dp"
                android:paddingEnd="@dimen/indent_16dp"
                android:paddingBottom="@dimen/indent_8dp"
                android:visibility="gone"
                tools:visibility="visible">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/user_image_view"
                    android:layout_width="@dimen/small_user_icon_size"
                    android:layout_height="@dimen/small_user_icon_size"
                    android:layout_marginEnd="@dimen/indent_8dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircleImageView"
                    tools:ignore="ContentDescription"
                    tools:src="@color/pink_200" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/user_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="@dimen/small_user_text_size"
                    android:visibility="visible"
                    tools:text="Andrii Andrushchenko" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_like"
                style="@style/MaterialImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@id/btn_download"
                app:srcCompat="@drawable/ic_like_outlined"
                app:tint="?attr/colorOnBackground" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_download"
                style="@style/MaterialImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/indent_8dp"
                android:layout_marginEnd="@dimen/indent_8dp"
                android:layout_toStartOf="@id/btn_bookmark"
                app:srcCompat="@drawable/ic_download_outlined"
                app:tint="?attr/colorOnBackground" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_bookmark"
                style="@style/MaterialImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/indent_8dp"
                android:layout_toStartOf="@id/btn_bottom_sheet_expand_collapse"
                android:gravity="center"
                app:srcCompat="@drawable/ic_bookmark_outlined"
                app:tint="?attr/colorOnBackground" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_bottom_sheet_expand_collapse"
                style="@style/MaterialImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                app:srcCompat="@drawable/ic_arrow_up"
                app:tint="?attr/colorOnBackground" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description_text_view"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/indent_8dp"
            android:ellipsize="end"
            android:gravity="center|start"
            android:maxLines="1"
            android:padding="@dimen/indent_16dp"
            android:textColor="?attr/colorOnBackground"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/ic_description"
            app:drawableTint="?attr/colorOnBackground"
            tools:text="Lorem ipsum dolor sit amet"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/location_text"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/indent_8dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:padding="@dimen/indent_8dp"
            android:textColor="?attr/colorControlNormal"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/ic_location"
            tools:text="Sumy, Ukraine"
            tools:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_exif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:itemCount="6"
            tools:listitem="@layout/item_photo_exif" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/indent_8dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_views"
                android:gravity="center"
                tools:text="100" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_likes"
                android:gravity="center"
                tools:text="100" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_downloads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_downloads"
                android:gravity="center"
                tools:text="100" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:itemCount="6"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_photo_tag"
            tools:orientation="horizontal"
            tools:visibility="visible" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>